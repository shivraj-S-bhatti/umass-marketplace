# Production Environment Variables
# Copy this to .env and fill in your values

# Database Configuration
POSTGRES_DB=umarket
POSTGRES_USER=umarket
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# AWS S3 Configuration
AWS_S3_ENABLED=true
AWS_S3_BUCKET_NAME=umass-marketplace-images
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME

# Image Compression Settings
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=1200
IMAGE_QUALITY=0.85
IMAGE_MAX_SIZE_KB=100

# Listing Retention (days - listings older than this will be auto-deleted)
LISTING_RETENTION_DAYS=14

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET

# OAuth2 Google Configuration
GOOGLE_CLIENT_ID=CHANGE_ME
GOOGLE_CLIENT_SECRET=CHANGE_ME

# Frontend / API base URL (production: https://everything-umass.tech)
FRONTEND_URL=https://everything-umass.tech
VITE_API_BASE_URL=https://everything-umass.tech

# Optional: Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
